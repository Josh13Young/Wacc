# Program:

begin

  # doesn't support negative powers
  int pow(int a, int b) is
    if b == 0
    then
      return 1
    else
      if b > 0
      then
        int count = 1 ;
        int b1 = b ;
        while b1 > 0 do
          count = count * a ;
          b1 = b1 - 1
        done ;
        return count
      else
        return -1
      fi
    fi
  end

  int a = 3 ;
  int b = 2 ;
  int c = 0 ;
  int ret = call pow(a, b) ;
  println ret ;
  int ret2 = call pow(b, c) ;
  println ret2

end