# Program:

begin

  int isEven(int a) is
    if (call mod(a, 2)) == 0
    then
      return true
    else
      return false
    fi
  end

  int mod(int a, int b) is
    int c = call abs(a) ;
    if c <= b
    then 
      return c
    else
      c = c - b ;
      int ret = call mod(c, b) ;
      return ret
    fi
  end

  int abs(int a) is
    if a >= 0
    then
      return a
    else
      return -a
    fi
  end

  int a = 4 ;
  int b = 0 ;
  int c = -2 ;
  int d = 3 ;
  int e = -2 ;
  int ret = call abs(a) ;
  println ret ;
  int ret2 = call abs(b) ;
  println ret2

end