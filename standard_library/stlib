# wacc standard library

# Program:

begin

# Mathematical utilities

  int min(int a, int b) is
    if a <= b
    then
      return a
    else
      return b
    fi
  end
    
  int max(int a, int b) is
    if a >= b
    then
      return a
    else
      return b
    fi
  end
  
  # doesn't support negative powers
  int pow(int a, int b) is
    if b == 0
    then
      return 1
    else
      if b > 0
      then
        int count = 1 ;
        int b1 = b ;
        while b1 > 0 do
          count = count * a ;
          b1 = b1 - 1
        done ;
        return count
      else
        return -1
      fi
    fi
  end

  int fact(int a) is
    if a > 0
    then
      int b = a - 1 ;
      int c = call fact(b) ;
      int ret = a * c ;
      return ret
    else
      return 1
    fi
  end

  skip

end