# wacc standard library

# Program:

begin

# Mathematical utilities

  int min(int a, int b) is
    if a <= b
    then
      return a
    else
      return b
    fi
  end
    
  int max(int a, int b) is
    if a >= b
    then
      return a
    else
      return b
    fi
  end
  
  # doesn't support negative powers
  int pow(int a, int b) is
    if b == 0
    then
      return 1
    else
      if b > 0
      then
        int c = b - 1 ;
        int d = call pow(a, c) ;
        int ret = a * d ;
        return ret
      else
        return -1
      fi
    fi
  end

  int fact(int a) is
    if a > 0
    then
      int b = a - 1 ;
      int c = call fact(b) ;
      int ret = a * c ;
      return ret
    else
      return 1
    fi
  end

  int abs(int a) is
    if a >= 0
    then
      return a
    else
      return -a
    fi
  end

  int mod(int a, int b) is
    if a <= b
    then 
      return a
    else
      a = a - b ;
      int ret = call mod(a, b) ;
      return ret
    fi
  end

  skip

end